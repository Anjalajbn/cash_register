    <tr >
        <th >Product ID</th>

        <th >Product Code</th>
        <th >Product Name</th>
        <th >Cost</th>
        <th >Vat Class</th>
    </tr>
    </thead>
    <tbody  id="listData">
        {% set i=1 %}
        {% for products in lists %}

        {% for product in products %}
            {% set total = total +product.cost %}
