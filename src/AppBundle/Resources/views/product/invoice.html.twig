                <td>{{ product.barcode }}</td>
                <td>{{ product.name }}</td>
                <td>${{ product.cost }} </td>
                <td>{{ product.vatClass }} $</td>

            </tr>
        {% endfor %}
        {% endfor %}
            {% endif %}
    <tr align="right"><td>total</td>
    <td>
        {{ total }}
    </td></tr>
    </tbody>
</table>


